# Google Workspace Configuration
GOOGLE_SERVICE_ACCOUNT_KEY_FILE=path/to/service-account-key.json
GOOGLE_DOMAIN=your-school-domain.edu
GOOGLE_DELEGATED_USER=admin@your-school-domain.edu

# Data Source Configuration
STUDENT_CSV_FILE=students.csv

# Execution Options
DRY_RUN=true
LOG_LEVEL=info
MAX_CONCURRENT_REQUESTS=10
RETRY_ATTEMPTS=3
RETRY_DELAY_MS=1000

# Safety Features
REQUIRE_CONFIRMATION_THRESHOLD=10
ENABLE_BACKUP=true
BACKUP_DIR=./backups

# Password Configuration
PASSWORD_PREFIX=lh00

# Email Notification (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=notifications@your-school-domain.edu
SMTP_PASSWORD=your-app-specific-password
NOTIFICATION_EMAIL=admin@your-school-domain.edu